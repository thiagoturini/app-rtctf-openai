{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/__tests__"],
  "testMatch": ["**/__tests__/**/*.test.ts"],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
  "moduleNameMapping": {
    "^@/(.*)$": "<rootDir>/$1"
  }
}
